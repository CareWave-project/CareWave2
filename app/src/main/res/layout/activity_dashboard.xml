<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- AppBar Layout -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Toolbar -->

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/toolbar_bg"
            app:layout_scrollFlags="scroll|enterAlways">

            <!-- Centered LinearLayout for items -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <!-- Menu Icon -->
                <ImageView
                    android:id="@+id/menu_icon"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="start"
                    android:layout_marginStart="-0dp"
                    android:layout_marginEnd="0dp"
                    android:src="@drawable/icon_menu" />

                <!-- CareWave Text -->
                <TextView
                    android:id="@+id/CareWave_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="145dp"
                    android:layout_marginEnd="-10dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="CareWave"
                    android:textColor="@color/white"
                    android:textSize="23sp" />

                <!-- Notification Icon -->
                <ImageView
                    android:id="@+id/notification_icon"
                    android:layout_width="35dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:layout_marginStart="80dp"
                    android:layout_marginEnd="0dp"
                    android:src="@drawable/icon_notification" />

            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <!--    TOP BUTTONS -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_marginStart="13dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="13dp"
            android:gravity="center"
            android:orientation="horizontal">

            <!--        button 1    -->

            <Button
                android:id="@+id/buttonHeartRate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Heart Rate"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:layout_width="110dp"
                android:layout_height="130dp"
                android:layout_margin="10dp"
                android:background="@drawable/top_button_bg"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/topbutton1"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/white_heart_outline" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="HeartRate"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="16dp" />
            </LinearLayout>

            <!--    button 2    -->
            <LinearLayout
                android:layout_width="110dp"
                android:layout_height="130dp"
                android:layout_margin="10dp"
                android:background="@drawable/top_button_bg"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/topbutton2"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/white_heart_outline" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SpO2 level"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="16dp" />
            </LinearLayout>

            <!--           button 3     -->
            <LinearLayout
                android:layout_width="110dp"
                android:layout_height="130dp"
                android:layout_margin="10dp"
                android:background="@drawable/top_button_bg"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/topbutton3"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/white_heart_outline" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Temperature"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="16dp" />
            </LinearLayout>

        </LinearLayout>


    <!--    Bottom BUTTONS  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginTop="300dp"
        android:orientation="horizontal"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="22dp">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Details"
            android:textStyle="italic"/>


    </LinearLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>
