<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PasswordResetActivity">

    <LinearLayout
        android:id="@+id/ll_main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EDEAEA"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="25dp"
        tools:ignore="UselessParent">

        <!-- App Name -->

        <!-- Login Text -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="CareWave"
            android:textColor="#3168C8"
            android:textSize="35sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="30dp"
            android:text="Reset password"
            android:textColor="#3168C8"
            android:textSize="32sp" />

        <!-- UserName EditText -->
        <EditText
            android:id="@+id/userNameR"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:hint="Enter your email"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textColorHint="#37837F"
            android:importantForAutofill="no"
            android:inputType="" />

        <!-- Password EditText -->


        <!-- Button layout for Reset, Submit -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:padding="25dp">

            <!-- Reset Button -->
            <Button
                android:id="@+id/buttonResetR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reset"
                android:textAllCaps="false"
                android:translationX="105dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/loginLink"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Back to login? Click here!"
            android:textColor="@color/blue"
            android:textStyle="italic"
            android:onClick="yes"
            />



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>